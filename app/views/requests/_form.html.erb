<%= simple_form_for @request do |f| %>
  <%= f.input :owner, label: "Name of owner/organization:", wrapper_html: { class: "col-md-6" }, required: true %>
  <%= f.input :contact, label: "Contact email/phone:", wrapper_html: { class: "col-md-6" }, required: true %>
  <%= f.input :description, as: :text, label: "Brief description of main desired features and pages:", :input_html => { rows: 7 }, wrapper_html: { class: "col-md-12" } %>
  <%= f.input :deadline, label: "If you have a deadline, please explain it below:", wrapper_html: { class: "col-md-12" } %>
  <%= f.button :submit, "Submit Request", class: "btn btn-primary center-block" %>
<% end %>
